<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderTextTheme" parent="CommonTextView">
        <item name="android:layout_marginStart">@dimen/min_value</item>
        <item name="android:ems">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">@dimen/min_value</item>
        <item name="android:paddingStart">108dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/min_value</item>
        <item name="android:layout_marginEnd">@dimen/min_value</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>